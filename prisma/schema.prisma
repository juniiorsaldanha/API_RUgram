// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  urlAvatar String
  admin     Boolean   @default(false)
  post      Post[]
  Comment   Comment[]
  Like      Like[]

  @@map("users")
}

model Post {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [user_id], references: [id])
  user_id    String
  content    String
  likes      Int       @default(0)
  created_at DateTime  @default(now())
  Comment    Comment[]
  Like       Like[]

  @@map("posts")
}

model Like {
  id      String @id @default(uuid())
  user    User   @relation(fields: [user_id], references: [id])
  user_id String
  post    Post   @relation(fields: [post_id], references: [id])
  post_id String

  @@map("likes")
}

model Comment {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [user_id], references: [id])
  user_id    String
  post       Post      @relation(fields: [post_id], references: [id])
  post_id    String
  content    String
  delete_at  DateTime?
  created_at DateTime  @default(now())

  @@map("comments")
}
